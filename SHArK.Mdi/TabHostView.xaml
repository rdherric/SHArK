<UserControl x:Class="SHArK.Mdi.TabHostView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SF="http://schemas.syncfusion.com/wpf">

    <!-- DockingManager to hold the MDI Tabs -->
    <SF:DockingManager x:Name="_tabContainer" ContainerMode="TDI" HideTDIHeaderOnSingleChild="False" ShowTabItemContextMenu="True"
                       ShowTabListContextMenu="True" SwitchMode="QuickTabs" UseDocumentContainer="True" />
</UserControl>